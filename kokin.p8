function _init()
	reset_game()
end

function _update()
	if game_state=="hatch" then
		update_hatch(egg)
	elseif game_state=="room" then
		update_room()
	end
end

function _draw()
	cls(0)
	
	if game_state=="hatch" then
		draw_hatch(egg)
	elseif game_state=="room" then
		draw_room()
	end
end


function reset_game()
	pet_data=gen_pet_data()
	egg=init_hatch()
	init_room()
	game_state="room"
end

function gen_pet_data()
	local data={
		clrs=rnd(pet_colors),
		sex=rnd(pet_sex),
		name=rnd(pet_names)
	}
	
	return data
end
